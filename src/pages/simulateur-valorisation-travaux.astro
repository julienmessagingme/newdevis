      location: "L'impact sur le loyer est limit√©. Les locataires cherchent avant tout la fonctionnalit√©, le DPE et la localisation. Le rafra√Æchissement peut r√©duire la vacance marginalement mais ne justifie pas un loyer significativement plus √©lev√©.",
    },
  };

  // ‚îÄ‚îÄ √âtat ‚îÄ‚îÄ
  let selectedObjective: Objective = 'revente';

  // ‚îÄ‚îÄ Formatage mon√©taire FR ‚îÄ‚îÄ
  function formatEuro(n: number): string {
    return new Intl.NumberFormat('fr-FR', {
      style: 'currency',
      currency: 'EUR',
      maximumFractionDigits: 0,
    }).format(n);
  }

  // ‚îÄ‚îÄ S√©lection objectif ‚îÄ‚îÄ
  function setObjective(obj: Objective) {
    selectedObjective = obj;
    const btnRevente  = document.getElementById('btn-revente')  as HTMLButtonElement;
    const btnLocation = document.getElementById('btn-location') as HTMLButtonElement;
    const activeClasses   = ['border-primary', 'bg-primary/5', 'text-primary', 'border-2'];
    const inactiveClasses = ['border-slate-200', 'bg-slate-50', 'text-slate-500'];

    if (obj === 'revente') {
      activeClasses.forEach(c => btnRevente.classList.add(c));
      inactiveClasses.forEach(c => btnRevente.classList.remove(c));
      inactiveClasses.forEach(c => btnLocation.classList.add(c));
      activeClasses.forEach(c => btnLocation.classList.remove(c));
    } else {
      activeClasses.forEach(c => btnLocation.classList.add(c));
      inactiveClasses.forEach(c => btnLocation.classList.remove(c));
      inactiveClasses.forEach(c => btnRevente.classList.add(c));
      activeClasses.forEach(c => btnRevente.classList.remove(c));
    }
  }

  // ‚îÄ‚îÄ Calcul + affichage ‚îÄ‚îÄ
  function estimate() {
    const budgetInput  = document.getElementById('budget')    as HTMLInputElement;
    const workTypeEl   = document.getElementById('work-type') as HTMLSelectElement;
    const errorEl      = document.getElementById('form-error') as HTMLElement;

    const budget   = parseInt(budgetInput.value);
    const workType = workTypeEl.value as WorkType;

    // Validation
    if (!budget || budget < 1000 || !workType) {
      errorEl.classList.remove('hidden');
      budgetInput.focus();
      return;
    }
    errorEl.classList.add('hidden');

    const cfg = CONFIG[workType][selectedObjective];
    const min = Math.round(budget * cfg.min);
    const max = Math.round(budget * cfg.max);
    const avgPct = Math.round(((cfg.min + cfg.max) / 2) * 100);

    // Mise √† jour des √©l√©ments
    (document.getElementById('result-emoji')   as HTMLElement).textContent = cfg.emoji;
    (document.getElementById('result-verdict') as HTMLElement).textContent = cfg.verdict;
    (document.getElementById('result-range')   as HTMLElement).textContent =
      `Entre ${formatEuro(min)} et ${formatEuro(max)}`;
    (document.getElementById('result-pct')     as HTMLElement).textContent =
      `${Math.round(cfg.min * 100)} ‚Äì ${Math.round(cfg.max * 100)} %`;

    // Barre de retour
    const bar = document.getElementById('result-bar') as HTMLElement;
    bar.className = `h-full rounded-full transition-all duration-700 ease-out ${cfg.barColor}`;
    setTimeout(() => { bar.style.width = `${Math.min(avgPct, 100)}%`; }, 50);

    // Barre top
    const topBar = document.getElementById('result-top-bar') as HTMLElement;
    topBar.className = `h-1.5 w-full transition-colors duration-500 ${cfg.topBarColor}`;

    // Message
    const msgBox      = document.getElementById('result-message-box')      as HTMLElement;
    const msgTitleRow = document.getElementById('result-message-title-row') as HTMLElement;
    const msgTitleSpan = document.getElementById('result-message-title')    as HTMLElement;
    const msgText     = document.getElementById('result-message')           as HTMLElement;
    msgBox.className      = `rounded-xl border p-4 mb-5 transition-colors duration-300 ${cfg.msgBoxBg} ${cfg.msgBoxBorder}`;
    msgTitleRow.className = `text-xs font-bold mb-1.5 flex items-center gap-1.5 ${cfg.msgBoxTextColor}`;
    msgTitleSpan.textContent = cfg.msgBoxTitle;
    msgText.className     = `text-sm leading-relaxed ${cfg.msgBoxTextColor}`;
    msgText.textContent   = MESSAGES[workType][selectedObjective];

    // Afficher le bloc r√©sultat
    const result = document.getElementById('result') as HTMLElement;
    result.classList.remove('hidden');
    setTimeout(() => {
      result.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }, 100);
  }

  // ‚îÄ‚îÄ Listeners ‚îÄ‚îÄ
  document.getElementById('btn-revente')?.addEventListener('click',  () => setObjective('revente'));
  document.getElementById('btn-location')?.addEventListener('click', () => setObjective('location'));
  document.getElementById('btn-estimate')?.addEventListener('click', estimate);

  // Lancer aussi sur Enter dans le champ budget
  document.getElementById('budget')?.addEventListener('keydown', (e) => {
    if ((e as KeyboardEvent).key === 'Enter') estimate();
  });
</script>
