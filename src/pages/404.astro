---
import BaseLayout from '@/layouts/BaseLayout.astro';
import AstroHeader from '@/components/astro/Header.astro';
import AstroFooter from '@/components/astro/Footer.astro';
---

<BaseLayout
  title="Page non trouvée | VerifierMonDevis.fr"
  description="La page demandée n'existe pas."
>
  <div class="min-h-screen flex flex-col">
    <AstroHeader />
    <main class="flex-1 flex items-center justify-center">
      <div class="text-center">
        <h1 class="text-4xl font-bold text-foreground mb-4">404</h1>
        <p class="text-xl text-muted-foreground mb-6">
          La page que vous cherchez n'existe pas.
        </p>
        <a href="/" class="inline-flex items-center justify-center rounded-md text-sm font-medium bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
          Retour à l'accueil
        </a>
      </div>
    </main>
    <AstroFooter />
  </div>
</BaseLayout>
