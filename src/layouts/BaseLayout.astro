---
import '@/index.css';

interface BreadcrumbItem {
  name: string;
  url: string;
}

interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogType?: string;
  ogImage?: string;
  jsonLd?: object;
  breadcrumbs?: BreadcrumbItem[];
}

const {
  title,
  description,
  canonical,
  ogType = 'website',
  ogImage = 'https://verifiermondevis.fr/og-image.png',
  jsonLd,
  breadcrumbs,
} = Astro.props;

const breadcrumbLd = breadcrumbs && breadcrumbs.length > 0 ? {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbs.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.name,
    "item": item.url,
  })),
} : null;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content="VerifierMonDevis.fr" />
    <meta name="robots" content="index, follow" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
    <link rel="apple-touch-icon" sizes="192x192" href="/favicon-192.png" />
    {canonical && <link rel="canonical" href={canonical} />}

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    {canonical && <meta property="og:url" content={canonical} />}
    <meta property="og:image" content={ogImage} />
    <meta property="og:locale" content="fr_FR" />
    <meta property="og:site_name" content="VerifierMonDevis.fr" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    {jsonLd && (
      <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
    )}

    {breadcrumbLd && (
      <script type="application/ld+json" set:html={JSON.stringify(breadcrumbLd)} />
    )}

    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "VerifierMonDevis.fr",
      "url": "https://verifiermondevis.fr",
      "logo": "https://verifiermondevis.fr/images/logo-header.png",
      "email": "contact@verifiermondevis.fr",
      "description": "Service gratuit d'analyse de devis d'artisans. Score de fiabilité, vérification entreprise, comparaison prix marché.",
      "sameAs": []
    })} />

    <script src="https://ai.messagingme.app/widget/f236879w135897.js" async="async"></script>
  </head>
  <body>
    <slot />

    <!-- Cookie consent banner -->
    <div id="cookie-banner" style="display:none" class="fixed bottom-0 left-0 right-0 z-[9999] p-4 sm:p-0">
      <div class="max-w-xl mx-auto sm:mb-6 bg-card border border-border rounded-xl shadow-lg p-4 sm:p-5 flex flex-col sm:flex-row items-start sm:items-center gap-3 sm:gap-4">
        <div class="flex-1 min-w-0">
          <p class="text-sm text-foreground font-medium mb-1">Respect de votre vie privée</p>
          <p class="text-xs text-muted-foreground">
            Ce site utilise uniquement des cookies techniques nécessaires au fonctionnement du service. Aucun cookie publicitaire ni de suivi.
            <a href="/confidentialite" class="text-primary hover:underline ml-1">En savoir plus</a>
          </p>
        </div>
        <button
          id="cookie-accept"
          class="inline-flex items-center justify-center whitespace-nowrap rounded-md bg-primary text-primary-foreground hover:bg-primary/90 h-9 px-4 text-sm font-medium flex-shrink-0"
        >
          Compris
        </button>
      </div>
    </div>

    <script>
      (function() {
        if (localStorage.getItem('cookie-consent')) return;
        var banner = document.getElementById('cookie-banner');
        if (banner) banner.style.display = 'block';
        var btn = document.getElementById('cookie-accept');
        if (btn) btn.addEventListener('click', function() {
          localStorage.setItem('cookie-consent', '1');
          if (banner) banner.style.display = 'none';
        });
      })();
    </script>
  </body>
</html>
